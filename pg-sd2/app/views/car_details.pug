doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= car.model_name + ' Details'
    link(rel="stylesheet" href="../car_details.css")
  body
    include navbar1
    .container
      h1= car.model_name

      .car-image
        img(src=`../images/${car.image_location}` alt="Car Image")

      // Add to Favorites Section
      .add-to-favorites
        form(action='/favourites' method='POST')
          input(type='hidden' name='product_id' value=car.car_id)
          button.favorite-btn(type='submit')
            span.fav-icon &#9829;
            | Add to Favorites

      // Overview Section
      .overview
        h2 Overview
        table
          tr
            th Manufacturer
            td= car.manufacturer
          tr
            th Production
            td= car.year
          tr
            th Assembly
            td= car.assembly_location
          tr
            th Car Type
            td= car.type
          tr
            th Price
            td= "Â£ " + car.price
          tr
            th Seater
            td= car.seater

      // Body and Chassis Section
      .body-chassis
        h2 Body and Chassis
        table
          tr
            th Class
            td= car.class
          tr
            th Layout
            td= car.layout
          tr
            th Platform
            td= car.platform
          tr
            th Related Models
            td= car.related_models

      // Powertrain Section
      .powertrain
        h2 Powertrain
        table
          tr
            th Transmission
            td= car.transmission

      // Additional Details Section
      .additional-details
        h2 Additional Details
        table
          tr
            th Description
            td= car.description
          tr
            th Rating
            td
              .rating
                // Loop to display stars based on average rating
                each num in [1, 2, 3, 4, 5]
                  span.star(class=(num <= avgRating ? 'filled' : '')) &#9733;

      // Write Review Section
      .write-review
        form(action='/submit-review' method='POST')
          input(type='hidden' name='product_id' value=car.car_id)
          textarea(name='review_text' placeholder="Write your review here..." required)
          input(type='number' name='rating' min="1" max="5" placeholder="Rating (1-5)" required)
          button(type='submit') Write Review

      // Display Reviews Section
      .reviews
        h2 Customer Reviews
        each review in reviews
          .review
            .review-header
              .review-author
                strong= review.customer_name
              .review-rating
                // Loop to display the rating as stars
                each num in [1, 2, 3, 4, 5]
                  span.star(class=(num <= review.rating ? 'filled' : '')) &#9733;
            .review-text
              p= review.review_text
            .review-date
              small= review.review_date
